pipeline {
  agent any
  stages {
    stage('Tests') {
      steps {
        echo 'start tests stage'
        sleep 30
        echo 'end tests stage'
      }
    }

    stage('Build') {
      steps {
        echo 'start build stage'
        sleep 30
        echo 'end build stage'
      }
    }

    stage('Deploy') {
      steps {
        echo 'start deploy stage'
        sleep 30
        echo 'end deploy stage'
      }
    }

  }
}